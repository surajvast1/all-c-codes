#include<stdio.h>
int selectionsort();
int main()
{
//    1 2 4 5 6
    int a,b=0;
    printf("enter number of elements in an array\n");
    scanf("%d",&a);
    int arr[a];
    printf("enter %d elements\n",a);
    for(int i=0;i<a;i++)
    {
       scanf("%d",&arr[i]);
    }
    for(int i=0;i<a-1;i++)
    {
        if(arr[i]<arr[i+1])
        b++;
        
    }
    
    if(b==a-1)
    printf("Sorted array\n");
    else 
    {
    printf("array is not sorted\n");
    for(int j=0;j<a-1;j++)
    {
    int k=j;
    for(int i=j;i<a;i++)
    {
    if(arr[i]<arr[k])
    k=i;
    }
    int temp=arr[k];
    arr[k]=arr[j];
    arr[j]=temp;
    }
    for(int i=0;i<a;i++)
    {
        printf("%d ",arr[i]);
    }
    }
    int key;
    printf("\nenter element to be searched\n");
    scanf("%d",&key);
    int low=0;
    int high=a-1;
    int mid;
    int l=1;
    while(low<=high)
    {
        mid=(low+high)/2;
        if(key==arr[mid])
        {
           printf("Element found at index %d");
           l=0;
           break;
        }
        else 
        {if(key>arr[mid])
        low=mid+1;
        else if(key<arr[mid])
        high=mid-1;
        }
    }
    if(l!=0)
    printf("Element not found\n");


    
    printf("\n");
    }
    

